{
    "name": "kea-typegen",
    "version": "0.5.1",
    "description": "Generate type definitions for kea logic",
    "scripts": {
        "start": "ts-node ./src/cli/typegen.ts",
        "build": "tsc -p .",
        "prepublish": "npm run test && npm run build",
        "run-built-cli": "node dist/cli/typegen.js",
        "test": "jest",
        "samples-check": "ts-node ./src/cli/typegen.ts check",
        "samples-write": "ts-node ./src/cli/typegen.ts write",
        "samples-watch": "ts-node ./src/cli/typegen.ts watch"
    },
    "main": "dist/cli/typegen.js",
    "author": "Marius Andra <marius.andra@gmail.com>",
    "license": "MIT",
    "bin": {
        "kea-typegen": "dist/cli/typegen.js"
    },
    "dependencies": {
        "@wessberg/ts-clone-node": "0.3.8",
        "prettier": "^2.0.5",
        "yargs": "^15.4.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@types/jest": "^26.0.3",
        "@types/node": "^14.0.19",
        "@types/yargs": "^15.0.5",
        "babel-jest": "^26.1.0",
        "husky": ">=4",
        "jest": "^26.1.0",
        "kea": "^2.2.0-rc.6",
        "lint-staged": ">=10",
        "react": "^16.13.1",
        "ts-jest": "^26.1.1",
        "ts-node": "^8.10.2",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "typescript": "*"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/dist",
            "<rootDir>/node_modules",
            "<rootDir>/.yalc",
            "<rootDir>/samples/.yalc"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,scss}": "prettier --write"
    }
}
